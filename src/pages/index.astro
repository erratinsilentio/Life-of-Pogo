---
import Layout from "../layouts/default.astro";
import hero from "../images/hero.jpg";
import { Image } from "astro:assets";
import BlogSnippet from "../components/blog-snippet.tsx";
---

<Layout>
  <section class="block relative z-0">
    <Image
      src={hero}
      alt="Cartoon bengal cat"
      loading="eager"
      decoding="async"
      class="z-10 h-96 object-cover"
    />
    <div class="absolute left-1/2 top-1/3 z-20">
      <h1 class="text-4xl">Pogo The Bengal</h1>
      <p class="text-3xl mt-2 mb-4">Warsaw's finest cat</p>
      <a
        href="/shop"
        class="bg-black rounded-md text-white px-6 py-2 hover:bg-emerald-800 duration-200"
        >Buy me food</a
      >
    </div>
  </section>

  <BlogSnippet client:only="react" />
</Layout>

<style>
  h1 {
    font-family: "Lobster", sans-serif; /* Use 'Rajdhani' as a fallback if Lobster is unavailable */
  }
</style>
